<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/css/form-styles.css" />
  </head>

  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <form class="form" action="/users/<%= user.id %>/?_method=PUT" method="POST" enctype="multipart/form-data">
        <h2 class="title">Edición de usuarios</h2>

        <div class="searchNav">
          <input type="text" placeholder="Buscar usuarios" maxlength="120" autocapitalize="off" spellcheck="false" autocomplete="off" value="<%= user.id %>"/>
          <i class="fa-solid fa-magnifying-glass"></i>
        </div>

        <div class="input-container">
          <input type="text" name="first_name" placeholder="Nombre" value="<%= user.first_name %>" />
        </div>

        <div class="input-container">
          <input type="text" name="last_name" placeholder="Apellido" value="<%= user.last_name %>" />
        </div>

        <div class="input-container">
          <input type="text" name="email" placeholder="Mail" value="<%= user.email %>" />
        </div>

        <div class="input-container">
          <input type="password" name="password" placeholder="Contraseña" value="<%= user.password %>" />
        </div>

        <div class="input-container">
          <input type="text" name="contact_number" placeholder="Número de teléfono" value="<%= user.contact_number %>" />
        </div>

        <div class="input-container">
          <input type="text" name="address" placeholder="Domicilio" value="<%= user.address %>" />
        </div>

        <div class="input-container">
          <input type="date" name="birth_date" placeholder="Fecha de nacimiento" value="<%= user.birth_date %>" />
        </div>

        <div class="picture">
          <label for="profile_picture">Selecciona una imagen del usuario</label>
          <input type="file" id="profile_picture" name="profile_picture" accept=".jpg" />
        </div>

        <div class="buttons-container">
          <button class="button" type="submit">Editar</button>
        </div>
      </form>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
